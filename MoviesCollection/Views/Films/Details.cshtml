@model MoviesCollection.Models.Film

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Галерея фильмов</title>
</head>
<body>

    <div class="row list_films">
        <div class="col-md-4 col-md-offset-1">

            @Html.Raw("<img style='width:300px; height:400px;' src=\"data:image/jpeg;base64,"
                                                + Convert.ToBase64String(Model.Poster) + "\" />")
        </div>
        <div class="col-md-7">

            <table>
                @foreach (var i in ViewBag.Genres)
                {
                    if (@i.Id == @Model.idGenre)
                    {
                        <tr><td><p>Название:</p></td><td><p>@Model.Name</p></td></tr>
                        <tr><td><p>Год:</p></td><td><p>@Model.Year</p></td></tr>
                        <tr><td><p>Страна:</p></td><td><p>@Model.Country</p></td></tr>
                        <tr><td><p>Жанр:</p></td><td><p>@i.Name</p></td></tr>
                        <tr><td><p>Режиссер:</p></td><td><p>@Model.Director</p></td></tr>
                        <tr><td><p>В главных ролях:</p></td><td><p>@Model.Starring</p></td></tr>
                    }
                }

            </table>
            <p>
                @Html.ActionLink("Релактировать", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("К списку", "Index")
            </p>
        </div>
        <div class="col-md-6 col-md-offset-3 video">
            <iframe width="640" height="360" src="@Model.Trailer" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

        </div>
    </div>

</body>
</html>



