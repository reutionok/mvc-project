@model IEnumerable<MoviesCollection.Models.Film>




@foreach (var item in Model)
{

    <div class="row list_films">
        <div class="col-md-1">
            @Html.Raw("<img style='width:100px; height:150px;' src=\"data:image/jpeg;base64,"
                                              + Convert.ToBase64String(item.Poster) + "\" />")
        </div>
        <div class="col-md-1  col-md-offset-1">

            <b>  @Html.ActionLink(@item.Name, "Details", new { id = item.Id })</b>

            <p> @Html.DisplayFor(modelItem => item.Year)</p>

            <p> @Html.DisplayFor(modelItem => item.Country)</p>
        </div>
       
    </div>
}
